@model ContactManager.Models.ViewModels.ContactViewModel

<div class="modal fade" id="contactModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="contactForm" method="post">
                @Html.AntiForgeryToken()
                
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Contact</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    
                    <input asp-for="Id" type="hidden" />

                    <div class="mb-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MobilePhone"></label>
                        <input asp-for="MobilePhone" class="form-control"/>
                        <span asp-validation-for="MobilePhone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="JobTitle"></label>
                        <input asp-for="JobTitle" class="form-control"/>
                        <span asp-validation-for="JobTitle" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BirthDate"></label>
                        <input asp-for="BirthDate" type="date" class="form-control"/>
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
